{
	"name": "kore",
	"displayName": "Kore",
	"description": "Kore support",
	"version": "25.3.0",
	"publisher": "kodetech",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Kore"
	],
	"activationEvents": [
		"workspaceContains:kfile.js",
		"workspaceContains:korefile.js",
		"workspaceContains:kincfile.js",
		"onCommand:kore.init",
		"onCommand:kore.compile"
	],
	"main": "./extension",
	"contributes": {
		"commands": [
			{
				"command": "kore.init",
				"title": "Init Project",
				"category": "Kore"
			},
			{
				"command": "kore.updateKore",
				"title": "Update extension-internal Kore",
				"category": "Kore"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Kore",
			"properties": {
				"kore.korePath": {
					"type": "string",
					"default": "",
					"description": "Points to a Kore directory."
				},
				"kore.ffmpeg": {
					"type": "string",
					"default": "",
					"description": "Path to ffmpeg for extended audio and video format support."
				},
				"kore.buildDir": {
					"type": "string",
					"default": "build",
					"description": "Relative path to the Kore build dir for the project."
				}
			}
		},
		"taskDefinitions": [
			{
				"type": "Kore",
				"required": [
					"target"
				],
				"properties": {
					"target": {
						"type": "string",
						"description": "The target to build for."
					}
				}
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Kode/vscode-kore"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^17.0.21",
		"@types/vscode": "^1.64.0",
		"eslint": "^8.10.0",
		"typescript": "^4.6.2",
		"@vscode/test-electron": "^2.1.3"
	},
	"extensionDependencies": [
		"ms-vscode.cpptools"
	]
}
